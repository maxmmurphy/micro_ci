%h2
  Builds
%hr
%table
  - @builds.each do |build|
    %tr
      %td
        %img{ :src => "/images/#{build.result}.png" }
      %td
        %a{:href => build.url}
          = build.name
      %td
        = "Executed #{time_ago_in_words(build.date)} ago."
      %td
        = "(#{build.date.strftime("%b %d %Y at %I:%M%p")})"
        

= will_paginate @builds